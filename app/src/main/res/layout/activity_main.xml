<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@drawable/appfondo">

    <ImageView
        android:layout_width="165dp"
        android:layout_height="159dp"
        android:layout_gravity="end"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/dd" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOGIN"
        android:textColor="#406DE1"
        android:textSize="40sp"
        android:layout_marginStart="20dp"
        android:textStyle="bold"
        android:shadowColor="@color/black"
        android:letterSpacing="0.1"/>

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="username"
    android:layout_marginStart="20dp"
    android:layout_marginTop="40dp"
    android:textColor="#406DE1"
    android:fontFamily="sans-serif-black"/>

    <EditText
        android:id="@+id/txtEmailLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="example@senati.pe"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="40dp"
        android:inputType="textEmailAddress"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="password"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:textColor="#406DE1"
        android:fontFamily="sans-serif-black"/>

    <EditText
        android:id="@+id/txtPassLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ingrese contraseÃ±a"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="40dp"
        android:inputType="numberPassword"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forget your password"
        android:layout_gravity="end"
        android:layout_marginEnd="40dp"
        android:textColor="#406DE1"
        android:fontFamily="sans-serif-black"/>
    <Button
        android:id="@+id/btnLogin"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="LOGIN"
        android:backgroundTint="#E9AE4A"
        android:layout_gravity="end"
        android:layout_marginEnd="60dp"
        android:layout_marginTop="40dp"/>

    <TextView
        android:id="@+id/lblRegistrate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Don't have acount... Create"
        android:layout_gravity="end"
        android:layout_marginEnd="70dp"
        android:textColor="#406DE1"
        android:textSize="12sp"
        android:clickable="true"
        android:focusable="true"
        />

</LinearLayout>